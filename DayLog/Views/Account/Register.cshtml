@model DayLog.Models.Data.UserDetails
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please fill in the details below to start using out daily journal!</h2>

@if (ViewBag.ShowAlert != null)
{
    <h3 style="color:red">We already have a user registered with this email address!</h3>
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <td>
                @*Textbox for User first name*@
                @Html.DisplayNameFor(p => p.FirstName)
                @Html.TextBoxFor(p => p.FirstName)
                @Html.ValidationMessageFor(p => p.FirstName)
            </td>
        </tr>
        <tr>
            <td>
                @*Textbox for User Email address*@
                @Html.DisplayNameFor(p => p.Username)
                @Html.TextBoxFor(p => p.Username)
                @Html.ValidationMessageFor(p => p.Username)
            </td>
        </tr>
        <tr>
            <td>
                @*Textbox for User password*@
                @Html.DisplayNameFor(p => p.Password)
                @Html.PasswordFor(p => p.Password)
                @Html.ValidationMessageFor(p => p.Password)
            </td>
        </tr>
        <tr>
            <td>
                @* Sending the Anti forgery token with the form to prevent Cross-site attacks *@
                <input type="submit" value="Submit" />
            </td>
        </tr>
    </table>
}


